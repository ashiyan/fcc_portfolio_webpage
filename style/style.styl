@import url("https://fonts.googleapis.com/css?family=Exo+2:500");

@font-face
	font-family 'Exo 2'
	font-style normal
	src url(../fonts/Exo2-Regular.otf)

body
	line-height 1
	font-size 100%
	font-family 'Exo 2', sans-serif
	color rgba(189,189,189,1)
	background-color #2e2e2e
	background-image url("../img/background-pattern.png")
  
// Для того, чтобы блоки .content занимали всю высоту окна. По умолчанию height любого тега, в том числе html и body, равна его содержимому. Для того, чтобы элемент имел min-height: 100%;, должна быть указана height его родителя. vw и vh работают не очень хорошо, иногда блоки наезжают друг на друга
html,
body
	height 100%

.panel
	&-navigation,
	&-social
		display flex
		position fixed
		z-index 100
		width 100vw
		height 40px
		align-items center
		justify-content space-around
		background-color #222
		background-image url("../img/background-pattern.png")
		box-shadow 0 0 20px #000

.link
	font-size 130%
	font-weight bold
	text-decoration none
	text-transform uppercase
	color rgba(189,189,189,1)
	cursor pointer
	transition 300ms
	&:hover
		color rgba(255,87,34,1)
		transition 300ms

.active
	color rgba(255,87,34,1)
		
.content
	display flex
	min-height 100%
	min-width 650px
	padding-top 60px
	border-top 2px solid rgba(60,60,60,1)
	border-bottom 2px solid rgba(20,20,20,1)
	&-title
		font-size 300%
		height 50px
		margin-bottom 40px

.about
	align-items center
	justify-content center
	&-photo
		max-width 40%
		min-width 15%
		border-radius 50%
		margin-right 50px
		box-shadow 0 0 10px rgba(0,0,0,1)
	&-info
		max-width 500px
		min-width 300px

.portfolio
	display flex
	flex-wrap wrap
	justify-content center
	align-items flex-start
	&-title
		width 100%
		text-align center
	&-item
		width 308px
		height 450px
		margin 0 50px 50px
		& input
			display none
		&-title
			display block
			margin 5px 0
			text-align center
			text-transform uppercase
			color rgba(189,189,189,1)
			font-size 115%
			margin-bottom 15px
			transition 300ms
			&:hover
				color rgba(255,87,34,1)
				text-decoration underline
				cursor pointer
				transition 300ms
		&-description
			text-align center
			color rgba(189,189,189,1)
			font-size 90%
			margin-top 10px
	&-slider,
	&-img
		width 292px
		height 320px
	&-slider
		position relative
		overflow hidden
		border 8px solid white
		box-shadow 0 5px 20px rgba(black, .5)
		border-radius 5px
	&-img
		position absolute
		display flex
		flex-direction column
		perspective 500px
		& .frag
			position absolute
			width 100%
			height 64px
			opacity 0
			transform-origin top bottom
			transform rotateX(180deg) scale(1.2)
	&-controls
		width 308px
		height 20px
		display flex
		justify-content space-around
		align-items center
		& label
			width 35px
			height 10px
			background-color black
			border-radius 3px
			opacity 0.3
			background-color rgba(189,189,189,1)
			transition opacity 0.5s
			cursor pointer
			&:hover
				background-color rgba(189,189,189,1)
				opacity 1
        
// Настройки для Dr. Norman Borlaug
for i in (1..2)
	.borlaug-img{i} .frag
		background url("../img/slides/borlaug_page/borlaug-" + i + ".jpg") no-repeat
		background-size cover

for i in (1..2)
	#borlaug-slide{i}:checked
		& ~ .portfolio-slider .borlaug-img{i} .frag
			opacity 1
			transform rotateX(0) scale(1)
			-webkit-filter: saturate(1) blur(0) brightness(1) contrast(1);
		& ~ .borlaug-controls label:nth-of-type({i})
			opacity 0.8
      
        
