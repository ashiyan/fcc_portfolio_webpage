.contact
	display flex
	flex-direction column
	align-items center
	&-form
		display flex
		flex-direction column
		align-items center
		width 500px
	&-field,
	&-send-button
		width 100%
		margin-bottom 10px
		padding 0 5px
		background-color #222
		color rgba(189,189,189,1)
		border 1px solid rgba(189,189,189,1)
		border-radius 5px
		transition 300ms
	&-field
		&::placeholder
			font-family 'Exo 2', sans-serif
			color rgba(189,189,189,0.5)
			font-size 90%
			font-style italic
		&:focus
			outline none
			border 1px solid rgba(255,87,34,1)
			transition 300ms
	&-send-button
		width 100px
		height 30px
		cursor pointer
		color rgba(255,87,34,1)
		transition 300ms
		&:hover
			border 1px solid rgba(255,87,34,1)
			transition 300ms
	&-or
		font-size 200%
		margin 50px 0
		text-align center
		&:before,
		&:after
			content ''
			display block
			width 500px
			height 2px
			background-color rgba(189,189,189,1)
	&-write,
	&-follow
		font-size 125%
		margin-bottom 20px
	&-social
		&-path
			display flex
			flex-direction column
			align-items center
			justify-content flex-start
			margin-bottom 20px
		&-panel
			display flex
			justify-content space-around
			width 200px
			min-width 150px
		&-button
			width 32px
			height 32px
			cursor pointer
			border 1px solid rgba(189,189,189,1)
			border-radius 5px
			transition 300ms
			&:hover
				border 1px solid rgba(255,87,34,1)
				transition 300ms